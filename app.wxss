.listBorder {
    padding: 0 20rpx;
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #666;
    border-bottom: 1rpx solid #eee;
    flex-direction: column
}

.listBorder > text:first-child, .listBorder > icon {
    float: left;
}

.listBorder > input, .listBorder > picker, .listBorder > radio-group {
    float: right;
    width: 300rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 10rpx 10rpx 0 0;
    text-align: right;
    position: relative;
}
.listBorder > input {
    border-bottom: 1px solid #c6c6c6;
}
.listBorder view:not(.listBorder) {
    width: 100%;
    height: 100%;
    padding-right: 40rpx;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    top: 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.listBorder view:not(.listBorder) text {
    display: inline-block;
    width: 0;
    height: 0;
    border-width: 10rpx;
    border-style: solid;
    border-color: #999 transparent transparent transparent;
    position: absolute;
    right: 10rpx;
    top: 45%;
}

.listBorder > .chooseImage {
    width: 50rpx;
    height: 50rpx;
    padding: 15rpx;
    float: right;
}

.bodyDataBox {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .7);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9999999;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bodyDataBox > .bodyDataContent {
    width: 670rpx;
    height: 900rpx;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 80rpx 20rpx 20rpx;
    box-sizing: border-box;
    position: relative;
}

.bodyDataBox > .bodyDataContent > icon {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    padding: 20rpx;
}

.bodyDataBox > .bodyDataContent > .bodyDataScroll {
    width: 100%;
    height: 100%;
}

.bodyDataBox > .bodyDataContent > .bodyDataScroll view {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bodyDataBox > .bodyDataContent > .bodyDataScroll view > text:first-child {
    color: #666;
    font-size: 30rpx;
}

.bodyDataBox > .bodyDataContent > .bodyDataScroll view > text:last-child {
    color: #999;
    font-size: 26rpx;
}

.listBorders {
    padding: 0 20rpx;
    background: #fff;
    height: 400rpx;
    margin-bottom: 3rpx;
    border-bottom: 1rpx solid #eee;
}

.listBorders > text {
    display: block;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #666;
}

.listBorders > view {
    width: 670rpx;
    height: 300rpx;
    border: 1rpx solid #eee;
    border-radius: 20rpx;
    box-sizing: border-box;
    padding: 10rpx;
    line-height: 40rpx;
    color: #666;
    font-size: 32rpx;
    word-wrap: break-word;
    overflow: auto;
    position: relative;
}

.listBorders > view > textarea {
    width: 666rpx;
    height: 296rpx;
    box-sizing: border-box;
    padding: 10rpx;
    line-height: 40rpx;
    color: #666;
    font-size: 32rpx;
    position: absolute;
    left: 0;
    top: 0;
    overflow: hidden;
}

.listBorders > input {
    width: 100%;
    height: 80rpx;
    border-bottom: 1px solid #c6c6c6;
}

.listChoose {
    padding: 20rpx;
    background: #fff;
    border-bottom: 1rpx solid #eee;
}

.listChoose > text {
    line-height: 80rpx;
    font-size: 32rpx;
    color: #666;
}

.listChoose .checkbox {
    display: block;
    margin-bottom: 10rpx;
}

.listChoose > input {
    width: 500rpx;
    height: 60rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    margin-top: 10rpx;
}
.listRadio {
    padding: 20rpx;
    background: #fff;
    border-bottom: 1rpx solid #eee;
}
.listRadio > text {
    line-height: 80rpx;
    font-size: 32rpx;
    color: #666;
}
.listRadio  .inline-radio {
    display: inline-block;
    width: 47%;
}
.listRadio  .block-radio {
    display: block; 
    margin-bottom: 10rpx;
}
.listRadio input {
    width: 500rpx;
    height: 60rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.tallyDown {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    border: 4rpx solid #ccc;
    box-sizing: border-box;
    line-height: 72rpx;
    text-align: center;
    color: #ccc;
    font-size: 50rpx;
}
.signature {
    overflow: hidden;
    width: 100%;
    height: 110px;
    background-color: #fff;
    text-align: center;
    border-bottom: 1rpx solid #eee;
  }
  .signature > image {
    transform-origin: 0 center;
    transform: rotateZ(-90deg);
    height: 210px;
    width: 110px;
  }
.plus {
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    border: 4rpx solid #f0762b;
    box-sizing: border-box;
    line-height: 72rpx;
    text-align: center;
    color: #f0762b;
    font-size: 50rpx;
    margin-bottom: 20rpx;
}

.color {
    font-size: 32rpx;
}

.imageList {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    overflow: hidden;
  }
  
  .imageList > view {
    width: 170rpx;
    height: 170rpx;
    margin: 0 10rpx 10rpx 0;
    float: left;
  }
  
  .imageList > view:nth-child(4n) {
    margin-right: 0;
  }
  .imageList .img {
    background-repeat: no-repeat;
    background-position: center center;
    background-size: contain;
    overflow: visible;
    position: relative;
  }
  
  .imageList .img > icon {
    position: absolute;
    right: -5rpx;
    top: -5rpx;
  }
  
  .imageList .addOne {
    border: 4rpx dashed #ddd;
    box-sizing: border-box;
  }
  
  .imageList .addOne > image {
    width: 100%;
    height: 100%;
  }