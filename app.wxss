/*日历全局样式*/

float action

.float-container {
    position: fixed;
    bottom: 40rpx;
    right: 40rpx;
    overflow: hidden;
}

.float-action {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
    background: #e14848;
    z-index: 100;
    text-align: center;
    opacity: 0.5;
    margin-left: 40rpx;
    float: right;
}

.float-action:active {
    opacity: 1;
}

.float-action image {
    width: 60rpx;
    height: 60rpx;
    margin-top: 20rpx;
}

.bg-normal {
    background: #46bc62 !important;
}

.bg-warning {
    background: #ecaa5b !important;
}

.bg-danger {
    background: #e14848 !important;
}

.color-primary {
    color: #46bc62 !important;
}

.color-warning {
    color: #ecaa5b !important;
}

.color-danger {
    color: #e14848 !important;
}

.border-normal {
