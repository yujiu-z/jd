/* pages/more/more.wxss */
page {
  background-color: #eee;
}

.userNeedKnow {
  position: relative;
  background: #fff;
  height: 100rpx;
  padding: 0 40rpx;
  font-size: 36rpx;
  color: #333;
  line-height: 100rpx;
}

.userNeedKnow > text {
  float: left;
}

.userNeedKnow > image {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 35rpx;
}

.userNeedKnow > button {
  position: absolute;
  top: 0;
  width: 670rpx;
  height: inherit;
  opacity: 0;
}

.otherDoctor {
  position: relative;
  width: 670rpx;
  height: 240rpx;
  margin: 20rpx auto;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 3rpx 10rpx rgba(109, 197, 163, 0.3);
}

.otherDoctor > view:first-child {
  float: left;
}

.otherDoctor > button {
  position: absolute;
  top: 0;
  width: inherit;
  height: inherit;
  opacity: 0;
}

image {
  width: 140rpx;
  height: 140rpx;
  margin-left: 40rpx;
  margin-top: 50rpx;
  float: left;
  border-radius: 50%;
}

.text {
  margin-left: 40rpx;
  width: 430rpx;
  height: 100%;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.text > text:first-child {
  color: #509d9f;
  font-size: 36rpx;
}

.text > text.text_first {
  color: #666;
  font-size: 25rpx;
}

.text > text.text_second {
  color: #999;
  font-size: 25rpx;
}