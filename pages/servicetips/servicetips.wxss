.activityList {
    position: relative;
    background: #fff;
    height: 140rpx;
    margin-top: 5rpx;
    padding: 0 40rpx;
    overflow: hidden;
}

.activityList > .body {
    width: 100%;
    height: 100%;
    position: relative;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    padding-left:50rpx;
}

.activityList > .body > view {
    width: 120rpx;
    height: 100rpx;
    float: left;
    /* margin-top: 20rpx; */
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
}

.activityList > .body > .activityName {
    display: block;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 40rpx;
    color: #333;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    text-align: left;
    padding: 18rpx 0 0 0rpx;
}

.activityList > .body > text.activityDate {
    position: absolute;
    right: 30rpx;
    bottom: 10rpx;
    color: #999;
    font-size: 26rpx;
}

.activityList > .operate {
    width: 200rpx;
    height: 100%;
    display: flex;
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(200rpx);
    transform: translateX(200rpx);
}

.activityList > .operate > view {
    width: 50%;
    height: 100%;
    color: #fff;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #409eff;
    padding: 0 15rpx;
    box-sizing: border-box;
}

.activityList > .operate > view:last-child {
    background-color: #f0762b;
}

.activityListAct > .body {
    -webkit-transform: translateX(-200rpx);
    transform: translateX(-200rpx);
}

.activityListAct > .operate {
    -webkit-transform: translateX(0rpx);
    transform: translateX(0rpx);
}



