/* pages/qrCode/qrCode.wxss */
page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    background-color: #2d3132;
    position: relative;
}

.box {
    width: 610rpx;
    height: 980rpx;
    position: absolute;
    left: 0; top: 0;
    bottom: 0; right: 0;
    margin: auto;
    z-index: 5;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.pickerBox {
    width: 500rpx;
    height: 80rpx;
    background-color: #656565;
    border-radius: 40rpx;
    padding: 0 60rpx 0 20rpx;
    box-sizing: border-box;
    position: relative;
}

.pickerBox view {
    width: 100%;
    height: 100%;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}

.pickerBox text {
    display: inline-block;
    width: 0;
    height: 0;
    border: 10rpx solid transparent;
    border-top: 10rpx solid #fff;
    position: absolute;
    right: 30rpx;
    top: 35rpx;
}

.docInfo {
    width: 610rpx;
    height: 860rpx;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 40rpx;
    box-sizing: border-box;
}

.header {
    height: 120rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
    float: left;
    margin-right: 20rpx;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
}

.font {
    width: 390rpx;
    height: 120rpx;
    float: left;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.name {
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
}

.body {
    width: 530rpx;
    height: 530rpx;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
}

.footer {
    font-size: 24rpx;
    color: #999;
    text-align: center;
}

.btn {
    height: 70rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
}

.btn > button {
    background-color: #509d9f;
    color: #fff;
    font-size: 36rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.canvasSize {
    position: absolute;
    top: -390px;
    left: 0;
    background: #fff;
}

.meng {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .7);
    position: absolute;
    left: 0;
    top: 0;
    z-index: 7;
}

.setting {
    width: 650rpx;
    height: 260rpx;
    padding: 40rpx 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 20rpx;
    position: absolute;
    left: 0; top: 0; right: 0; bottom: 0;
    margin: auto;
}

.tips {
    height: 60rpx;
    font-size: 34rpx;
    color: #666;
    text-align: center;
    line-height: 40rpx;
}

.btns {
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.btns > button:first-child {
    background-color: #fff;
    color: #333;
    height: 70rpx;
    line-height: 70rpx;
}

.btns > button:last-child {
    background-color: #509d9f;
    color: #fff;
    height: 70rpx;
    line-height: 70rpx;
}