/* pages/signature/signature.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: relative;
}
.my-can {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}
.container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.btn {
  transform: rotateZ(90deg);
  transform-origin: 100% 0; 
  width: 100%;
  position: absolute;
  background-color: #f0762b;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
}
.btn .clear,.btn .submit{
  height: 100%;
  display: inline-block;
  width: 30%;
}
.btn> .instruction {
  background-color: #fff;
  color: #000;
  display: inline-block;
  width: 40%;
}
.btn >.clear {
  border: 1px solid #f0762b;
  box-sizing: border-box;
  background-color: #fff;
  color: #f0762b;
}
.sing{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 50rpx;
  color: #000;
}