/* pages/createPatient/createPatient.wxss */
page, .container {
    width: 100%;
    height: 100%;
    background-color: #eee;
     padding-bottom: 1000rpx;
     overflow:hidden;
    
}

.listBorder {
    padding: 0 30rpx;
    width:98%;
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #666;
    margin-bottom: -300rpx;
    margin-top:-200rpx;
    /* margin-bottom:-600rpx; */
}

.listBorder > text:first-child {
    float: left;
}

.listBorder > input,
.listBorder > picker {
    float: right;
    width: 450rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 10rpx;
    text-align: right;
}

.listBorder > view {
    float: right;
    width: 500rpx;
    height: 60rpx;
    margin-top: 10rpx;
    display: flex;
}

.listBorder > view > text {
    display: inline-block;
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-left: 1rpx solid #ccc;
    box-sizing: border-box;
    text-align: right;
    color: #f0762b;
}

.listBorder > view > picker {
    width: 380rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: right;
    margin-right: 20rpx;
}

.listBorder > .scanBtn {
    width: 60rpx!important;
    height: 60rpx!important;
    margin: 10rpx 0 0 10rpx!important;
    float: right!important;
    position: relative!important;
}

.scanBtn > image, .scanBtn > .scan {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.scanBtn > .scan {
    display: block;
    opacity: 0;
}

.exist {
    width: 670rpx;
    height: 80rpx;
    background-color: #f0762b;
    color: #fff;
    border-radius: 40rpx;
    text-align: center;
    font-size: 32rpx;
    line-height: 80rpx;
    margin: 20rpx auto;
    margin-top:-600rpx;
}

.creatGroup {
    float: right;
    color: #f0762b;
    font-size: 28rpx;
    margin-top: 25rpx;
    line-height: 30rpx!important;
    border-bottom: 1rpx solid #f0762b;
}

.getNewGroupValue {
    border: 1rpx solid #eee;
    padding: 5rpx 20rpx;
    border-radius: 10rpx;
}